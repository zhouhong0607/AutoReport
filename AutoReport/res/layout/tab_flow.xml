<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab2Layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listbackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/flow_excep_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_textview_title"
        android:gravity="center"
        android:layout_marginTop="@dimen/little_margin"
        android:text="" />

    <TextView
        android:id="@+id/flow_excep_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_textview_info"
        android:gravity="center"
         android:layout_marginTop="@dimen/little_margin"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_textview_title"
         android:layout_marginTop="@dimen/little_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间戳"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发送字节量"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="接收字节量"
            android:textColor="@color/red" />
    </LinearLayout>

    <ListView
        android:id="@+id/tab_flow_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:divider="@null"
        android:dividerHeight="2dp"
        
        />

</LinearLayout>